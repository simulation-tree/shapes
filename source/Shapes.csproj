<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>disable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Title>Shapes</Title>
    <Authors>popcron</Authors>
    <Company>simulation-tree</Company>
    <RepositoryUrl>https://github.com/simulation-tree/shapes</RepositoryUrl>
    <IsAotCompatible>True</IsAotCompatible>
    <IsTrimmable>True</IsTrimmable>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\unmanaged\core\Unmanaged.Core.csproj"/>
    <ProjectReference Include="..\..\types\core\Types.Core.csproj"/>
    <ProjectReference Include="..\..\types\generator\Types.Generator.csproj">
      <OutputItemType>Analyzer</OutputItemType>
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
    </ProjectReference>
  </ItemGroup>

  <ItemGroup>
    <Content Include="bin/Debug/net9.0/Shapes.dll" Pack="true" PackagePath="tools/debug/Shapes.dll" Visible="false"/>
    <Content Include="bin/Debug/net9.0/Shapes.xml" Pack="true" PackagePath="tools/debug/Shapes.xml" Visible="false"/>
    <Content Include="bin/Release/net9.0/Shapes.dll" Pack="true" PackagePath="tools/release/Shapes.dll" Visible="false"/>
    <Content Include="bin/Release/net9.0/Shapes.xml" Pack="true" PackagePath="tools/release/Shapes.xml" Visible="false"/>
    <Content Include="build/Shapes.targets" Pack="true" PackagePath="build/Shapes.targets" Visible="false"/>
  </ItemGroup>

</Project>